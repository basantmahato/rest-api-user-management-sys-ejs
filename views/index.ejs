<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users Table</title>
  <style>

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 20px; /* Base margin for content */
      background-color: #f4f7f6; 
      color: #333;
    }

    h1 {
      color: #28a745; /* Green heading color */
      text-align: center;
      margin-bottom: 30px;
      font-weight: 600;
    }

    
    table {
      width: 80%;
      margin: 0 auto; /* Center the table */
      border-collapse: collapse; 
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #ffffff;
      border-radius: 8px;
      overflow: hidden;
    }

  
    thead tr {
      background-color: #28a745; /* Green header background */
      color: white;
    }

    th {
      padding: 15px;
      text-align: left;
      font-weight: 700;
      letter-spacing: 0.5px;
    }


    td {
      padding: 12px 15px;
      border-bottom: 1px solid #ddd;
    }

    tbody tr:nth-child(even) {
      background-color: #f2f2f2; /* Zebra striping */
    }


    tbody tr:hover {
      background-color: #e9ecef;
      cursor: pointer;
    }


    td:first-child {
      text-align: center; /* Center the ID column */
    }

 
    tbody tr:last-child td {
      border-bottom: none;
    }
  </style>
</head>
<body>
  <h1>Users List</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Gender</th> 
        <th>Job Title</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.gender %></td>
          <td><%= user.job_title %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>